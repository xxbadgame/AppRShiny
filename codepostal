#dans le ui:

 fluidRow(
          box(
            # Filtre 1 : bouton glissière pour le nombre de stations possibles à voir
            title = "Filtres",
            sliderInput("nombre_stations", "Nombre de stations :", min = 1, max = nrow(bdd), value = 100),
            # Ajoutez le champ de saisie de code postal ici
            textInput("code_postal_filtre", "Code postal à filtrer:", value = ""),
            width = 4,
            height = 200
          ),


  # dans le server

 
    map <- leaflet() %>%
      addTiles()  # Ajoutez un fond de carte
    
    # Filtrer les données en fonction du code postal entré
    code_postal_filtre <- input$code_postal_filtre
    if (code_postal_filtre != "") {
      # Filtrer les données en utilisant le code postal
      VelovList_filtre <- bdd[grep(code_postal_filtre, bdd$adresse$postal_code), ]
    } else {
      # Si aucun code postal n'est saisi, utilisez toutes les données
      VelovList_filtre <- bdd
    }
